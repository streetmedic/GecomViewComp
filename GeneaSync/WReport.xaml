<Window x:Class="GedcomViewCompare.Report"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Combined Data" Height="535" Width="450" Background="#FFE0E0EC">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Name="rowTextBox" Height="*"></RowDefinition>
            <RowDefinition Name="rowButtons" Height="25"></RowDefinition>
        </Grid.RowDefinitions>
        <RichTextBox Grid.Row="0" HorizontalAlignment="Stretch" Name="theReportTextBox" VerticalAlignment="Stretch" Margin="1" VerticalScrollBarVisibility="Visible" IsReadOnly="True" />
        <Button Grid.Row="1" Content="Save" Height="23" HorizontalAlignment="Left" Margin="0,0,0,0" Name="buttonSaveReport" VerticalAlignment="Top" Width="75" ToolTip="Create a new document with perons available in only one file" Click="buttonSaveReport_Click" />
    </Grid>
</Window>
